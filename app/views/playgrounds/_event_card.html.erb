<div class="card-event" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= event.image_url %>)">
  <%= event.name %>
  <%= event.location %>
  <%= event.date %>
  <%= event.price %>
  <%= event.reward %>
  <%= link_to "+", event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
</div>
