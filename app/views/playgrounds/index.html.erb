<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= image_path('basket_cover_unsplash.jpg') %>)">
  <div class="container">
    <h1>Ground Trotters</h1>
    <p>Make your life a basket ball legend</p>
    <%= link_to "Discover", "#how", class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <div class="section">
    <h2 id="how" class="text-center">How does it work?</h2>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to new_playground_path do %>
          <div class="icon">
            <%= image_tag "basketball.svg" %>
          </div>
        <% end %>
        <p class="text-center fs-24">Add your playground</p>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to new_playground_path do %>
          <div class="icon">
            <%= image_tag "basketball.svg" %>
          </div>
        <% end %>
        <p class="text-center fs-24">Create your events</p>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to new_playground_path do %>
          <div class="icon">
            <%= image_tag "basketball.svg" %>
          </div>
        <% end %>
        <p class="text-center fs-24">Manage your daily activity</p>
      </div>
    </div>
  </div>
  <div class="section">
    <h2 class="text-center">Our Community Best Events</h2>
    <div class="cards">
      <% @playgrounds.each do |playground| %>
        <%= render "playground_card", playground: playground %>
      <% end %>
    </div>
  </div>
  <div class="section">
    <div class="text-center">
      <%= link_to "Create my playground", new_playground_path, class: "btn btn-flat" %>
    </div>
  </div>
</div>
